<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:EsportManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EsportManager.Views.TournamentsView"
             x:DataType="viewModels:TournamnetsViewModel">
    
    
    
    <UserControl.DataContext>
        <viewModels:TournamnetsViewModel/>
    </UserControl.DataContext>
   
<ScrollViewer Padding="25" Background="#1E1E1E" Width="1100" Height="650">
  <StackPanel Spacing="20">

    <!-- Magiczny Las -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="250">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/maigc_forest.jpg"  Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Magiczny Las" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI"/>
          <TextBlock Text="Wkrocz do pradawnego lasu, gdzie drzewa świecą własnym światłem." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Pełen magii i pułapek, to miejsce tylko dla odważnych!" 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap"/>
          <TextBlock Text="Poziom trudności: Trudny" Foreground="Orange" FontWeight="Bold" Margin="0,10,0,0" FontSize="16"/>
          <TextBlock Text="Wymagany skill: 70" Foreground="Orange" FontWeight="Bold" Margin="0,4,0,0" FontSize="14"/>
          <TextBlock Text="Opłata za udział: 150 mistycznych monet" Foreground="DarkOrange" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
          <TextBlock Text="Pula nagród: 3000 mistycznych monet" Foreground="Orange" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Zapisz mnie na turniej"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Dziki Zachód -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="250">
      <DockPanel>
        <Image  Source="avares://EsportManager/Assets/wild-west.jpg" Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Dziki Zachód" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Przetestuj refleks w zakurzonych miasteczkach dzikiego zachodu." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Szybkie strzelanie i dzikie pojedynki czekają na Ciebie." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap"/>
          <TextBlock Text="Poziom trudności: Bardzo trudny" Foreground="#D32F2F" FontWeight="Bold" Margin="0,10,0,0" FontSize="16"/>
          <TextBlock Text="Wymagany skill: 90" Foreground="#D32F2F" FontWeight="Bold" Margin="0,4,0,0" FontSize="14"/>
          <TextBlock Text="Opłata za udział: 300 mistycznych monet" Foreground="#E57373" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
          <TextBlock Text="Pula nagród: 7000 mistycznych monet" Foreground="#EF9A9A" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Zapisz mnie na turniej"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Miasto Neonów -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="250">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/city.jpg"  Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Miasto Neonów" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Unikaj laserów i cyberzagrożeń w mieście, które nigdy nie śpi." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Idealne miejsce na szybkie wyzwania i refleks." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap"/>
          <TextBlock Text="Poziom trudności: Łatwy" Foreground="#4CAF50" FontWeight="Bold" Margin="0,10,0,0" FontSize="16"/>
          <TextBlock Text="Wymagany skill: 30" Foreground="#4CAF50" FontWeight="Bold" Margin="0,4,0,0" FontSize="14"/>
          <TextBlock Text="Opłata za udział: 50 mistycznych monet" Foreground="#81C784" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
          <TextBlock Text="Pula nagród: 1000 mistycznych monet" Foreground="#A5D6A7" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Zapisz mnie na turniej"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Zimowy Las -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="250">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/winter.jpg"  Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Zimowy Las" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Śnieg, mróz i ciche ścieżki w tajemniczym zimowym lesie." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Zamroź swoich przeciwników w tym mroźnym wyzwaniu." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap"/>
          <TextBlock Text="Poziom trudności: Średni" Foreground="#FFC107" FontWeight="Bold" Margin="0,10,0,0" FontSize="16"/>
          <TextBlock Text="Wymagany skill: 50" Foreground="#FFC107" FontWeight="Bold" Margin="0,4,0,0" FontSize="14"/>
          <TextBlock Text="Opłata za udział: 100 mistycznych monet" Foreground="#FFD54F" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
          <TextBlock Text="Pula nagród: 2000 mistycznych monet" Foreground="#FFECB3" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Zapisz mnie na turniej"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Niebo -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="250">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/sky.jpg"  Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Niebo" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Wzbij się ponad chmury i pokonaj przeciwników na wysokościach." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Idealne miejsce na lotnicze pojedynki i szybkie akcje." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap"/>
          <TextBlock Text="Poziom trudności: Bardzo trudny" Foreground="#D32F2F" FontWeight="Bold" Margin="0,10,0,0" FontSize="16"/>
          <TextBlock Text="Wymagany skill: 90" Foreground="#D32F2F" FontWeight="Bold" Margin="0,4,0,0" FontSize="14"/>
          <TextBlock Text="Opłata za udział: 300 mistycznych monet" Foreground="#E57373" FontWeight="Bold" FontSize="14" Margin="0,6,0,0"/>
          <TextBlock Text="Pula nagród: 7000 mistycznych monet" Foreground="#EF9A9A" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Zapisz mnie na turniej"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>
    <Rectangle Height="60" Fill="Transparent"/>

  </StackPanel>
</ScrollViewer>
 </UserControl>



