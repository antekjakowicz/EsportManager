<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:EsportManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EsportManager.Views.TrainingView">
  
    <UserControl.DataContext>
        <viewModels:TrainingView/>
    </UserControl.DataContext>

    
  <ScrollViewer Padding="25" Background="#1E1E1E" Width="1100" Height="650">
  <StackPanel Spacing="20">

    <!-- Trening Sprawności -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="220">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/gym.jpg" Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Trening Sprawności" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI"/>
          <TextBlock Text="Zwiększ swoją wytrzymałość i siłę poprzez intensywne ćwiczenia fizyczne." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Wzrost umiejętności: +15" Foreground="#4CAF50" FontWeight="Bold" Margin="0,6,0,0" FontSize="14"/>
          <TextBlock Text="Koszt zmęczenia: 10" Foreground="PaleGreen" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <TextBlock Text="Opłata za udział: 80 mistycznych monet" Foreground="#81C784" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Weź udział w treningu"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Trening Walki -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="220">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/combat_training.jpg" Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Trening Walki" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Doskonal techniki bojowe, ucz się szybkich i precyzyjnych ataków." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Wzrost umiejętności: +20" Foreground="#D32F2F" FontWeight="Bold" Margin="0,6,0,0" FontSize="14"/>
          <TextBlock Text="Koszt zmęczenia: 15" Foreground="IndianRed" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <TextBlock Text="Opłata za udział: 120 mistycznych monet" Foreground="#E57373" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Weź udział w treningu"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Trening Zwinności -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="220">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/jump.jpg" Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Trening Zwinności" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Popraw szybkość ruchów i zwinność, by unikać ciosów i pułapek." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Wzrost umiejętności: +12" Foreground="#4CAF50" FontWeight="Bold" Margin="0,6,0,0" FontSize="14"/>
          <TextBlock Text="Koszt zmęczenia: 8" Foreground="Green" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <TextBlock Text="Opłata za udział: 70 mistycznych monet" Foreground="#81C784" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Weź udział w treningu"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- Trening Logiki -->
    <Border Background="#26292E" Padding="30" CornerRadius="16" MinHeight="220">
      <DockPanel>
        <Image Source="avares://EsportManager/Assets/hq720.jpg" Width="320" Height="240" Stretch="UniformToFill" DockPanel.Dock="Right" Margin="20,0,0,0"/>
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="Trening Logiki" Foreground="White" FontSize="24" FontWeight="Bold"/>
          <TextBlock Text="Rozwijaj umiejętności analityczne i szybkie podejmowanie decyzji." 
                     Foreground="LightGray" FontSize="15" TextWrapping="Wrap" Margin="0,10,0,0"/>
          <TextBlock Text="Wzrost umiejętności: +18" Foreground="#2196F3" FontWeight="Bold" Margin="0,6,0,0" FontSize="14"/>
          <TextBlock Text="Koszt zmęczenia: 12" Foreground="CornflowerBlue" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <TextBlock Text="Opłata za udział: 100 mistycznych monet" Foreground="#64B5F6" FontWeight="Bold" FontSize="14" Margin="0,2,0,0"/>
          <Button Content="Weź udział w treningu"
                  Background="SeaGreen"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,14,0,0"
                  Width="250"
                  Height="40"
                  FontSize="14"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <Rectangle Height="60" Fill="Transparent"/>

  </StackPanel>
</ScrollViewer>

</UserControl>
